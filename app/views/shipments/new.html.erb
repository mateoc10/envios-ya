<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>

<% provide(:title, 'Map') %>
<h1>Select origin and destination</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div>
      <div id="map" style='width: 555px; height: 350px;' ></div>
    </div>
    <%= form_tag(shipment_details_path) do %>
      <%= hidden_field_tag 'originLat' %>
      <%= hidden_field_tag 'originLng' %>
      <%= hidden_field_tag 'destinationLat' %>
      <%= hidden_field_tag 'destinationLng' %>
      <div><%= submit_tag 'Save' %></div>
    <% end %>
  </div>
</div>

<%= javascript_include_tag "shipments.js", "data-turbolinks-track" => true  %>
