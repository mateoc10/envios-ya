<% provide(:title, "Drivers confirmation") %>
<h1>Driver confirmation</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:admin, url: 'admins/create') do |f| %>
    
    <%= f.label :Drivers %>
    <%= f.collection_select :driver, Driver.order(:name), :id, :name,  {:prompt => @select_value, :selected => :id } %>
    
    
    <%= f.button "Reject", class: "btn btn-primary" , link_to: 'reject_path' %>
    

    <% end %>

  </div>
</div>
