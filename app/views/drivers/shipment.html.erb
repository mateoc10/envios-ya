<% provide(:title, "Shipment") %>
<h1>Shipment</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
        <%= form_for(:driver, url: '') do |f| %>
          
          <%= f.label :Id %>
          <%= @shipment.id%>
          <br>
          <%= f.label :Sender_email %>
          <%= @shipment.sender.email%>
          <br>
          <%= f.label :Destination_email %>
          <%= @shipment.receiver.email%>
          <br>
          <%= f.label :date%>
          <%= @shipment.date%>
          <br>
          <%= f.label :Origin %>
          <%= @shipment.origin.street%>,
          <%= @shipment.origin.number%>,
          <%= @shipment.origin.zipcode%>
          <br>
          <%= f.label :Destination %>
          <%= @shipment.destination.street%>,
          <%= @shipment.origin.number%>,
          <%= @shipment.origin.zipcode%>
          <br>
          <%= f.label :Price %>
          <%= @shipment.price%>
          <br>
          <%= f.label :State %>
          <%= @shipment.state%>
          <br>
          <%= f.label :Payment_method %>
          <%= @shipment.payment%>
          <br>
          
          <% if @shipment.state == 'In progress' %>
          <%= link_to 'End shipment',drivers_shipment_path(:id => @shipment.id), class: 'btn btn-primary'%>
          <%end%>
          
          
    <% end %>
  </div>
</div>