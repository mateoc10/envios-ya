<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@driver, url: '/drivers/signup') do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>
      
      <%= f.label :last_name %>
      <%= f.text_field :last_name %>
      
      <%= f.label :document %>
      <%= f.text_field :document %>
      
      <%= f.label :documentation %>
      <%= f.text_field :documentation %>
      
      <%= f.label :img_license %>
      <%= f.text_field :img_license %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

     

      <%= f.submit "Create", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>