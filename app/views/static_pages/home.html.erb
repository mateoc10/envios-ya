<div class="center jumbotron" >
  <h1>Welcome to Envios Ya</h1>

  <% if logged_in? %>
    <h2>
      Start by creating a shipment
    </h2>
    <%= link_to "Create shipment", '/shipments/new', class: "btn btn-lg btn-primary" %>
  <% elsif logged_in_driver? %>
